pipeline {
    agent none // Define that no agent should be used at the top level

    stages {
        stage('Clone Source Code') {
            agent any 
            steps {
                script {
                    git url: 'https://github.com/prabhatu012345/jenkins-declarative.git', branch: 'main'
                }
            }
        }

        stage('Build Deploy and Unit Test') {
            agent {
                kubernetes {
                    label 'maven'
                    defaultContainer 'maven-container'
                    yaml """
                    apiVersion: v1
                    kind: Pod
                    metadata:
                      labels:
                        some-label: maven
                    spec:
                      serviceAccountName: jenkins-ksa
                      nodeSelector:
                        node-pool: jenkins-agent-internal
                      containers:
                      - name: maven-container
                        image: maven:3.8.4-jdk-11
                        tty: true
                        command:
                        - cat
                    """
                }
            }
            steps {
                container('maven-container') {
                    script {
                        echo 'Building project with Maven...'
                        sh 'mvn clean package -DskipTests'
                        
                        echo 'Deploying JAR file...'
                        sh 'mvn deploy -DskipTests'
                        
                        echo 'Running JUnit tests...'
                        sh 'mvn test -Dtest=com.example.HelloWorldTest'
                        
                        def artifactId = 'maven-project'
                        def version = '1.0-SNAPSHOT'
                        def jarFile = "target/${artifactId}-${version}.jar"
                        def nexusUrl = "http://nexus.prod.urbanbamboo.in:8081/repository/maven-releases/${artifactId}/${version}/${artifactId}-${version}.jar"

                        echo 'Listing target directory...'
                        sh 'ls -l target/'

                        echo 'Uploading JAR file to Nexus...'
                        withCredentials([usernamePassword(credentialsId: 'nexus-credentials', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                            sh """
                            echo "Using credentials for Nexus upload"
                            curl -u ${USERNAME}:${PASSWORD} \
                                 --upload-file ${jarFile} \
                                 ${nexusUrl}
                            """
                        }
                    }
                }
            }
        }

        stage('Load Performance Test with JMeter') {
            agent {
                kubernetes {
                    label 'jmeter'
                    defaultContainer 'jmeter-container'
                    yaml """
                    apiVersion: v1
                    kind: Pod
                    metadata:
                      labels:
                        some-label: jmeter
                    spec:
                      nodeSelector:
                        node-pool: jenkins-jmeter-internal
                      containers:
                      - name: jmeter-container
                        image: justb4/jmeter:5.5
                        tty: true
                        command:
                        - cat
                    """
                }
            }
            steps {
                container('jmeter-container') {
                    script {
                        // Verify that the JMeter test plan file exists
                        echo 'Checking if JMeter test plan file exists...'
                        sh 'ls -l load_test_plan.jmx'
                        // Run JMeter performance tests
                        echo 'Running JMeter load test...'
                        sh 'jmeter -n -t load_test_plan.jmx -l results.jtl -e -o /results'
                    }
                }
            }
        }

        stage('Selenium Test') {
            agent {
                kubernetes {
                    label 'maven'
                    defaultContainer 'maven-container'
                    yaml """
                    apiVersion: v1
                    kind: Pod
                    metadata:
                      labels:
                        some-label: maven
                    spec:
                      serviceAccountName: jenkins-ksa
                      nodeSelector:
                        node-pool: jenkins-agent-internal
                      containers:
                      - name: maven-container
                        image: maven:3.8.4-jdk-11
                        tty: true
                        command:
                        - cat
                    """
                }
            }
            steps {
                container('maven-container') {
                    script {
                        echo 'Running Selenium tests...'
                        sh 'mvn test -Dtest=com.example.SeleniumTest -Dwebdriver.base.url=http://selenium:4444/wd/hub'
                    }
                }
            }
        }
    }
}
